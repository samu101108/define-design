{% extends "tease.twig" %}

{% block content %}
	<div class="d-flex flex-column-reverse">
		<h2 class="h2 mt-4"><a class="text-decoration-none" href="{{post.link}}">{{post.title}}</a></h2>
		<p><time pubdate>{{post.date}}</time></p>
		{% if post.thumbnail.src %}
			<div class="w-75 mx-auto thumb-deco">
				<span>
					<img class="w-100 img-fluid" src="{{post.thumbnail.src}}" />
				</span>
			</div>
		{% endif %}
	</div>
{% endblock %}
              <img src="{{ site.theme.link | relative }}/static/images/linkedin-logo.svg" alt="LinkedIn" class="w-100" />
            </figure>
          </a>
        </li>

        <li class="socialmedia-item">
          <a href="#" class="d-flex align-items-center justify-content-center w-100 h-100" title="Acompanhe no YouTube">
            <figure class="d-flex align-items-center m-0">
              <img src="{{ site.theme.link | relative }}/static/images/youtube-logo.svg" alt="YouTube" class="w-100" />
            </figure>
          </a>
        </li>

        <li class="socialmedia-item">
          <a href="#" class="d-flex align-items-center justify-content-center w-100 h-100" title="Encontre-nos no WhatsApp">
            <figure class="m-0">
              <img src="{{ site.theme.link | relative }}/static/images/whatsapp-logo.svg" alt="WhatsApp" class="w-100" />
            </figure>
          </a>
        </li>

      </ul>
    </div>

    <div class="blackheader__mainlinks d-none d-md-block">
      <div class="mainlinks d-flex align-items-stretch">
        <ul class="d-flex m-0 p-0">
          <li>
            <a href="#" class="d-flex align-items-center h-100 text-decoration-none">

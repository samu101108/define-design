    <div class="blackheader__socialmedia">
      <ul class="socialmedia d-flex align-items-center m-0 p-0 w-100 h-100">

        <li class="socialmedia-item">
          <a href="#" class="d-flex align-items-center justify-content-center w-100 h-100" title="Acompanhe no Instagram">
            <figure class="m-0">
              <img src="{{ site.theme.link | relative }}/static/images/instagram-logo.svg" alt="Instagram" class="w-100" />
            </figure>
          </a>
        </li>

        <li class="socialmedia-item">
          <a href="#" class="d-flex align-items-center justify-content-center w-100 h-100" title="Acompanhe no LinkedIn">
